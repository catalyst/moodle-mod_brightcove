{{!
    @template mod_feedback/player

    Displays Brightcove video player

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "accountid" : "123456789",
        "playerid" : "abcd13245",
        "videoid" : "123456",
        "aspectratio" : "56.25",
        "transcripturl" : "http://brightcove.vo.llnwd.net/v1/unsecured/media/"
    }

}}
<div class="mod_brightcove__layout">
    <div class="mod_brightcove__video">
        <div style="padding-top: {{aspectratio}}%;">
            <video id="{{playerid}}"
                data-video-id="{{videoid}}"
                data-account="{{accountid}}"
                data-player="{{playerid}}"
                data-setup='{ "playbackRates": [0.5, 1, 1.5, 2.0] }'
                data-embed="default"
                data-captions="{{transcripturl}}"
                data-progress="{{progress}}"
                data-application-id
                class="video-js"
                controls
                style="width: 100%; height: 100%; position: absolute; top: 0px; bottom: 0px; right: 0px; left: 0px;">
            </video>
        </div>
    </div>

    <div class="mod_brightcove__transcript_control">
        <div class="header form-inline">
            {{#transcripturl }}
                <input id="bc-search" type="search" placeholder="Search transcript" class="form-control mb-2 mr-sm-2 mb-sm-0">
                <button class="btn btn-secondary" data-search="next">&darr;</button>
                <button class="btn btn-secondary" data-search="prev">&uarr;</button>
                <button class="btn btn-secondary" data-search="clear">âœ–</button>
                <span id="downloadTranscript"></span>
            {{/transcripturl }}
            <span id="insertionPoint"></span>
        </div>
        {{#transcripturl }}
            <div class="mod_brightcover__transcript" id="transcript"></div>
        {{/transcripturl }}
    </div>

</div>

</p>
