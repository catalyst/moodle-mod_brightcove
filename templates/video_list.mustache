{{!
    @template mod_feedback/player

    Displays Brightcove video player

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }

}}
<div class="bc-selectlist-container">
    <!-- TOP PAGINATION START -->
    <div class="bc-sl-nav">
        <div class="bc-sl-search col-sm-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="button">Go</button>
                </span>
            </div>
        </div>
        <div class="bc-sl-pagination col-sm-6">
            <nav aria-label="Page navigation" class="text-right">
                <ul class="pagination pagination-sm">
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- TOP PAGINATION START -->
    <div class="bc-sl-header row">
        <div class="bc-sl-h-1 col-sm-2"></div>
        <div class="bc-sl-h-2 col-sm-4">Name</div>
        <div class="bc-sl-h-3 col-sm-2">Status</div>
        <div class="bc-sl-h-4 col-sm-4">Created</div>
    </div>
    <div class="bc-sl-data">
        <!-- START LOOP -->
        {{#videos}}
        <div class="bc-sl-d-container row">
            <div class="bc-sl-d-1 col-sm-2">
                <span class="bc-sl-d-1-thumbnail">
                    <span class="thumbnail-position">
                        <img src="{{thumbnail_url}}" class="img-responsive" />
                        <span class="bc-sl-d-1-timestamp">{{duration}}</span>
                    </span>
                </span>
            </div>
            <div class="bc-sl-d-2 col-sm-4">
                <span class="bc-sl-d-2-title">{{name}}</span>
                <span class="bc-sl-d-2-id">{{id}}</span>
            </div>
            <!-- TO CHANGE ICON, REPLACE fa- WITH ICON NAME eg "check, warning" -->
            <div class="bc-sl-d-3 col-sm-2"><span><i class="icon fa fa-check"></i></span></div>
            <div class="bc-sl-d-4 col-sm-4"><span>{{created_at}}</span></div>
        </div>
        {{/videos}}
        <!-- END LOOP -->

        <div class="bc-sl-d-container row selected"> <!-- CLASS 'selected' ADDED BY CLICK EVENT -->
            <div class="bc-sl-d-1 col-sm-2">
                <span class="bc-sl-d-1-thumbnail">
                    <span class="thumbnail-position">
                        <img src="http://www.pinga.nl/dl/html5/r/silly-ways-to-die-party-576742227280302373/silly-ways-to-die-party-576742227280302373-200x120.jpg" class="img-responsive" />
                        <span class="bc-sl-d-1-timestamp">03:25</span>
                    </span>
                </span>
            </div>
            <div class="bc-sl-d-2 col-sm-4">
                <span class="bc-sl-d-2-title">Another video test file</span>
                <span class="bc-sl-d-2-id">5526240613001</span>
            </div>
            <div class="bc-sl-d-3 col-sm-2"><span><i class="icon fa fa-warning"></i></span></div>
            <div class="bc-sl-d-4 col-sm-4"><span>08/09/2017 10:45 AM</span></div>
        </div>
    </div>
    <!-- BOTTOM PAGINATION START -->
    <div class="bc-sl-nav">
        <div class="bc-sl-pagination"> <!-- REMOVE CLASS `col-sm-6` -->
            <nav aria-label="Page navigation" class="text-right">
                <ul class="pagination pagination-sm">
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- BOTTOM PAGINATION END -->
</div>


